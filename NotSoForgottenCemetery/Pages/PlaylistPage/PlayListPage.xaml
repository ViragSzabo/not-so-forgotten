<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NotSoForgottenCemetery.Pages.PlaylistPage"
             x:Class="NotSoForgottenCemetery.Pages.PlaylistPage.PlayListPage">

    <ContentPage.BindingContext>
        <vm:PlaylistViewModel />
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Playlists}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="10" CornerRadius="10" BackgroundColor="Beige">
                    <StackLayout>
                        <Label Text="{Binding Name}" FontAttributes="Bold"/>
                        <Label Text="{Binding Description}"/>
                        <Button Text="Open in Spotify" Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PlaylistViewModel}}, Path=OpenPlaylistCommand}" CommandParameter="{Binding .}" />
                    </StackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>